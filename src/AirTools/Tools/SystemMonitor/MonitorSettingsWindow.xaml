<Window x:Class="AirTools.Tools.SystemMonitor.MonitorSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="系统监控设置"
        Width="340" Height="420"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <SolidColorBrush x:Key="BgDark" Color="#1A1D2B"/>
        <SolidColorBrush x:Key="BgCard" Color="#2B3040"/>
        <SolidColorBrush x:Key="BgCardHover" Color="#B03D4358"/>
        <SolidColorBrush x:Key="AccentColor" Color="#89B4FA"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#CDD6F4"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#A6ADC8"/>
        <SolidColorBrush x:Key="TextDim" Color="#8B90AA"/>
        <SolidColorBrush x:Key="BorderColor" Color="#40FFFFFF"/>
    </Window.Resources>

    <Border Background="{DynamicResource BgDark}" CornerRadius="10" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="⚙ 系统监控设置" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimary}" Margin="0,0,0,16"/>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,-10,0" Padding="0,0,10,0">
                <StackPanel>
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="刷新间隔 (毫秒)" Foreground="{DynamicResource TextPrimary}" VerticalAlignment="Center"/>
                        <ComboBox x:Name="CmbInterval" Grid.Column="1" Width="120" SelectedIndex="1">
                            <ComboBoxItem Content="500 ms" Tag="500"/>
                            <ComboBoxItem Content="1000 ms" Tag="1000"/>
                            <ComboBoxItem Content="2000 ms" Tag="2000"/>
                            <ComboBoxItem Content="3000 ms" Tag="3000"/>
                        </ComboBox>
                    </Grid>
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="磁盘盘符" Foreground="{DynamicResource TextPrimary}" VerticalAlignment="Center"/>
                        <ComboBox x:Name="CmbDrive" Grid.Column="1" Width="80" Foreground="{DynamicResource TextPrimary}" Background="{DynamicResource BgCard}"/>
                    </Grid>
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="网络适配器" Foreground="{DynamicResource TextPrimary}" VerticalAlignment="Center"/>
                        <ComboBox x:Name="CmbNetwork" Grid.Column="1" Width="140" Foreground="{DynamicResource TextPrimary}" Background="{DynamicResource BgCard}"/>
                    </Grid>
                    
                    <TextBlock Text="外观样式" Foreground="{DynamicResource TextSecondary}" FontSize="12" Margin="0,8,0,6"/>
                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="布局密度" Foreground="{DynamicResource TextPrimary}" VerticalAlignment="Center"/>
                        <ComboBox x:Name="CmbDensity" Grid.Column="1" Width="120">
                            <ComboBoxItem Content="紧凑" Tag="Compact"/>
                            <ComboBoxItem Content="宽松" Tag="Relaxed"/>
                        </ComboBox>
                    </Grid>
                    <CheckBox x:Name="ChkGradient" Content="数据使用颜色（根据负载变色）" Foreground="{DynamicResource TextPrimary}" Margin="0,4" IsChecked="True"/>

                    <TextBlock Text="显示项" Foreground="{DynamicResource TextSecondary}" FontSize="12" Margin="0,12,0,6"/>
                    <CheckBox x:Name="ChkCpu" Content="CPU 使用率" Foreground="{DynamicResource TextPrimary}" Margin="0,2" IsChecked="True"/>
                    <CheckBox x:Name="ChkMem" Content="内存使用率" Foreground="{DynamicResource TextPrimary}" Margin="0,2" IsChecked="True"/>
                    <CheckBox x:Name="ChkDisk" Content="磁盘使用率" Foreground="{DynamicResource TextPrimary}" Margin="0,2" IsChecked="True"/>
                    <CheckBox x:Name="ChkNet" Content="网络速度" Foreground="{DynamicResource TextPrimary}" Margin="0,2" IsChecked="True"/>
                    
                    <Grid Margin="0,16,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="窗口位置" Foreground="{DynamicResource TextPrimary}" VerticalAlignment="Center"/>
                        <ComboBox x:Name="CmbPosition" Grid.Column="1" Width="120">
                            <ComboBoxItem Content="右下角" Tag="BottomRight"/>
                            <ComboBoxItem Content="左下角" Tag="BottomLeft"/>
                            <ComboBoxItem Content="右上角" Tag="TopRight"/>
                            <ComboBoxItem Content="左上角" Tag="TopLeft"/>
                        </ComboBox>
                    </Grid>
                    <Grid Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="布局方向" Foreground="{DynamicResource TextPrimary}" VerticalAlignment="Center"/>
                        <ComboBox x:Name="CmbOrientation" Grid.Column="1" Width="120">
                            <ComboBoxItem Content="横向" Tag="Horizontal"/>
                            <ComboBoxItem Content="竖向" Tag="Vertical"/>
                        </ComboBox>
                    </Grid>
                    <Grid Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="窗口透明度" Foreground="{DynamicResource TextPrimary}" VerticalAlignment="Center"/>
                        <ComboBox x:Name="CmbOpacity" Grid.Column="1" Width="120">
                            <ComboBoxItem Content="70%" Tag="0.7"/>
                            <ComboBoxItem Content="80%" Tag="0.8"/>
                            <ComboBoxItem Content="85%" Tag="0.85"/>
                            <ComboBoxItem Content="90%" Tag="0.9"/>
                            <ComboBoxItem Content="100%" Tag="1.0"/>
                        </ComboBox>
                    </Grid>
                </StackPanel>
            </ScrollViewer>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                <Button Content="取消" Width="80" Height="32" Margin="0,0,8,0" Background="{DynamicResource BgCardHover}" Foreground="{DynamicResource TextPrimary}" BorderThickness="0" Cursor="Hand" Click="BtnCancel_Click"/>
                <Button Content="确定" Width="80" Height="32" Background="{DynamicResource AccentColor}" Foreground="White" BorderThickness="0" Cursor="Hand" Click="BtnOk_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
