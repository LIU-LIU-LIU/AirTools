<Window x:Class="AirTools.Tools.Clipboard.ClipboardSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="剪切板设置"
        Width="360" Height="220"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <SolidColorBrush x:Key="BgDark" Color="#B01A1D2B"/>
        <SolidColorBrush x:Key="BgCard" Color="#8C2B3040"/>
        <SolidColorBrush x:Key="BgCardHover" Color="#B03D4358"/>
        <SolidColorBrush x:Key="AccentColor" Color="#89B4FA"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#CDD6F4"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#A6ADC8"/>
        <SolidColorBrush x:Key="TextDim" Color="#8B90AA"/>
        <SolidColorBrush x:Key="BorderColor" Color="#70FFFFFF"/>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="10" Background="{DynamicResource BgDark}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Border.Effect>
            <DropShadowEffect Color="#88000000" BlurRadius="14" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" Margin="0,0,0,16">
                <TextBlock Text="⚙ 剪切板设置" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimary}"/>
                <Button Content="✕" DockPanel.Dock="Right" Click="BtnClose_Click" Width="28" Height="28" FontSize="12" Cursor="Hand"
                        Background="Transparent" Foreground="{DynamicResource TextSecondary}" BorderThickness="0"/>
            </DockPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,-10,0" Padding="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="主题请在 Air Tools 主设置中配置" FontSize="12" Foreground="{DynamicResource TextDim}" Margin="0,0,0,12"/>
                    <Grid Margin="0,0,0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="唤出快捷键" Foreground="{DynamicResource TextPrimary}" VerticalAlignment="Center" FontSize="13"/>
                        <Button x:Name="BtnHotkey" Grid.Column="1" Content="Ctrl+Shift+V" Style="{StaticResource PrimaryButton}"
                                MinWidth="120" Click="BtnHotkey_Click" ToolTip="点击后按下想要的快捷键"/>
                    </Grid>
                    <TextBlock Text="提示：需包含 Ctrl / Shift / Alt 中至少一个修饰键" FontSize="11" Foreground="{DynamicResource TextDim}"/>
                </StackPanel>
            </ScrollViewer>

            <Button Grid.Row="2" Content="确定" Style="{StaticResource PrimaryButton}" HorizontalAlignment="Right" Margin="0,16,0,0" Click="BtnOk_Click"/>
        </Grid>
    </Border>
</Window>
